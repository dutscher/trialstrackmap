{{#extend "default"}}
    {{#content "title-override"}}true{{/content}}
    {{#content "title" mode="prepend"}}Home-Shack with all {{wardrobe.homeshack.length}} costumes of the frontier{{/content}}
    {{#content "description"}}Did you know that {{wardrobe.homeshack.length}} costumes exists?{{/content}}
    {{#content "url" mode="append"}}/home-shack.html{{/content}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" type="text/css" href="/dist/css/main.css{{cacheBuster}}"/>
    {{/content}}

    {{#content "preload-images"}}data:loaded{{/content}}

    {{#content "body"}}
        <div class="page-body" ng-controller="home-shack">
            {{setVariable "combinations" (mathPow wardrobe.homeshack.length 3)}}
            {{> navigation title="Home Shack" badge=(combine wardrobe.homeshack.length " costumes and " combinations " combinations")}}

            <div class="costum__area">
                {{prio-listHomeShack data=wardrobe tpl="tpls/partials/homeshack/costum.hbs"}}

                <hr/>

                {{> costum wardrobe.costums.dutscher home-shack-editor-preview=true}}
                {{> costum-editor wardrobe}}
            </div>
        </div>
    {{/content}}
{{/extend}}
