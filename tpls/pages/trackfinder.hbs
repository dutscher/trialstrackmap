{{#extend "default"}}
    {{#content "title-override"}}true{{/content}}
    {{#content "title" mode="prepend"}}Trackfinder - {{/content}}
    {{#content "styles"}}
        <link rel="stylesheet" type="text/css" href="/dist/css/trackfinder.css{{cacheBuster}}"/>
    {{/content}}
    {{#content "htmlCtrl"}}ng-controller="trackData" data-without="myjson" data-snowflakes="no"{{/content}}
    {{#content "ctrl"}}ng-controller="trackFinder"{{/content}}
    {{#content "body"}}
        <div class="centerized">
            <div class="trackfinder gradient-border with-box-shadow">
                <div class="trackpainter__message centerized" ng-if="showMessage">
                    {%showMessage%}
                </div>
                <div class="trackpainter"
                    data-world="1"
                    data-src="{{replaceHoster ../map.database.media.gfx.images.trackmaps.1.srcPath ../map.database.media.gfx.hoster}}"
                    data-dim-map="{{../map.database.media.gfx.images.trackmaps.1.dim}}"
                    data-dim-path="{{../map.database.media.gfx.images.trackmaps.1.dimPath}}"
                    ></div>
                <div class="trackpainter"
                    data-world="2"
                    data-src="{{replaceHoster ../map.database.media.gfx.images.trackmaps.2.srcPath ../map.database.media.gfx.hoster}}"
                    data-dim-map="{{../map.database.media.gfx.images.trackmaps.2.dim}}"
                    data-dim-path="{{../map.database.media.gfx.images.trackmaps.2.dimPath}}"
                    ></div>
                <div class="trackfilter" ng-show="showFilter">
                    <input type="text"
                           class="trackfilter__search with-box-shadow"
                           ng-class="{'with-icon':searchTrack !== ''}"
                           placeholder="{%'page.rightSidebar.searchForTrack'|translate%}"
                           ng-model="searchTrack"
                           ng-model-options="{debounce:150}"/>
                    <i class="faults with-cursor" ng-if="searchTrack !== ''" ng-click="clearSearch()"></i>
                </div>
            </div>
        </div>
    {{/content}}
{{/extend}}